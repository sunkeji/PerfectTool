<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/x15</item>
        <item name="android:paddingRight">@dimen/x15</item>
        <item name="android:paddingTop">@dimen/x5</item>
        <item name="android:paddingBottom">@dimen/x5</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/cp_gray</item>
    </style>


    <style name="line_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#DCDCDC</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_borderColor">@color/transparent</item>
        <item name="atg_background">@drawable/corners_bgall_color2</item>
        <item name="atg_textColor">#49C120</item>
        <item name="atg_backgroundColor">@color/transparent</item>
        <item name="atg_dashBorderColor">#AAAAAA</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#DE000000</item>
        <item name="atg_checkedBorderColor">@color/transparent</item>
        <item name="atg_checkedTextColor">@color/transparent</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">#49C120</item>
        <item name="atg_pressedBackgroundColor">#EDEDED</item>
        <item name="atg_borderStrokeWidth">0.5dp</item>
        <item name="atg_textSize">@dimen/sp13</item>
        <item name="atg_horizontalSpacing">@dimen/x10</item>
        <item name="atg_verticalSpacing">@dimen/x5</item>
        <item name="atg_horizontalPadding">@dimen/x5</item>
        <item name="atg_verticalPadding">@dimen/x5</item>
    </style>
    <!-- 字母栏 -->
    <style name="SideLetterBar">
        <item name="letter_text_color">@color/text_color</item>
        <item name="letter_text_selectcolor">@color/colorPrimary</item>
        <item name="letter_text_size">@dimen/sp16</item>
    </style>
    <!-- 密码框 -->
    <style name="GridPasswordView" />

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">@dimen/x0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">@dimen/x1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/cp_divider</item>
        <item name="android:layout_marginTop">@dimen/x1</item>
        <item name="android:layout_marginBottom">@dimen/x1</item>
    </style>
</resources>
